---
// Import the necessary components
import MainLayout from "../../layouts/MainLayout.astro";
import ContactSection from "../../components/sections/es/ContactSection_es.astro";
import { SITE } from "@data";

const pageTitle: string = `Contáctenos | ${SITE.title}`;
const metaDescription =
  "¿Tiene preguntas o desea discutir un proyecto? Contáctenos y diseñemos juntos la solución perfecta con nuestros servicios de tanques ISO.";
const ogTitle = "Contáctenos | Tank Global Solutions";
---

<MainLayout
  title={pageTitle}
  lang="es"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://tankglobalsolution.com/es/contact",
    url: "https://tankglobalsolution.com/es/contact",
    name: "Contáctenos | Tank Global Solutions",
    description:
      "¿Tiene preguntas o desea discutir un proyecto? Contáctenos y diseñemos juntos la solución perfecta con nuestros servicios de tanques ISO.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://tankglobalsolution.com/es/",
      name: "Tank Global Solutions",
      description:
        "Tank Global Solutions ofrece soluciones de tanques ISO de primer nivel y servicios especializados para satisfacer todas sus necesidades de proyectos.",
    },
    inLanguage: "es",
  }}
>
  <ContactSection />
</MainLayout>
